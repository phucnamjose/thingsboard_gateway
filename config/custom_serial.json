{
  "name": "Custom serial connector",
  "devices": [
    {
      "name": "CustomSerialDevice1",
      "type": "default",
      "port": "/dev/ttyUSB0",
      "baudrate": 9600,
      "converter": "CustomSerialUplinkConverter",
      "telemetry": [
        {
          "type": "float",
          "key": "temperature",
          "delimiter": " ",
          "index": 0
        },
        {
          "type": "float",
          "key": "humidity",
          "delimiter": " ",
          "index": 1
        },
        {
          "type": "int",
          "key": "timeStamp",
          "delimiter": " ",
          "index": 2
        }
      ],
      "attributes": [
        {
          "key": "Battery",
          "type": "int",
          "delimiter": " ",
          "index": 3
        }
      ],
      "attributeUpdates": [
        {
          "attributeOnThingsBoard": "attr1",
          "stringToDevice": "value = ${attr1}\n"
        }
      ]
    }
  ]
}